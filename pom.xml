    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <modules>
        <module>gsrs-spring-boot-autoconfigure</module>
        <module>gsrs-spring-boot-starter</module>
        <module>gsrs-core</module>
        <module>gsrs-spring-legacy-indexer</module>
